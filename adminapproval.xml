        android:textSize="32dp" />

    <Button
        android:id="@+id/b1"
        android:layout_width="399dp"
        android:layout_height="wrap_content"

        android:layout_weight="0.03"
        android:text="approve" />


    <Button
        android:id="@+id/b2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.04"
